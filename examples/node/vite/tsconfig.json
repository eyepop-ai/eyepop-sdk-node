{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "eyepop": [ "../../src/eyepop/dist/eyepop.min.js" ],
      "eyepop-render-2d": [ "../../src/eyepop-render-2d/dist/eyepop-render-2d.min.js" ],
    },
    "typeRoots": [ "node_modules/@types", "../../src/eyepop/dist/eyepop.index.d.ts", "../../src/eyepop-render-2d/dist/eyepop.render2d.index.d.ts" ],
  },
  "include": [ "src" ],
  "typeAcquisition": {
    "enable": true
  }
}
