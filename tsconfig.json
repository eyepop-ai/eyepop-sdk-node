{
  "include": ["src/eyepop", "src/eyepop-render-2d" ,"tests/eyepop", "examples"],
  "sourceMap": true,
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "EyePop/*": ["src/eyepop/*"],
      "EyePop": ["src/eyepop/index.ts"],
      "EyePop/Render2d/*": ["src/eyepop-render-2d/*"],
      "EyePop/Render2d": ["src/eyepop-render-2d/index.ts"]
    },
    "noEmit": true,

    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    "skipLibCheck": true
  }
}
