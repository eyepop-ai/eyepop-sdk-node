{
    "include": ["src/eyepop", "src/eyepop-render-2d", "tests/eyepop", "examples/node"],
    "sourceMap": true,
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "EyePop/*": ["eyepop/*"],
            "EyePop": ["src/eyepop/index.ts"],
            "EyePop/Render2d/*": ["src/eyepop-render-2d/*"],
            "EyePop/Render2d": ["src/eyepop-render-2d/index.ts"],
            "EyePopRenderer/*": ["eyepop-render-2d/*"],
            "@eyepop.ai/eyepop/*": ["eyepop/*"],
            "@eyepop.ai/eyepop-render-2d/*": ["eyepop-render-2d/*"],
            "@eyepop.ai/eyepop": ["eyepop/"],
            "@eyepop.ai/eyepop-render-2d": ["eyepop-render-2d/"]
        },
        "noEmit": true,

        "resolveJsonModule": true,
        "declaration": true,
        "emitDeclarationOnly": false,

        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": false,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,

        "skipLibCheck": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "nodenext"
        }
    }
}
